<h1 class="text-center">Adicionar Categoria</h1>

<div class="container" style="max-width: 80%">
  <form action="/categorias/add" method="POST" class="mb-3 mx-auto">
    <div class="form-group">
      <label for="inputNome">Nome:</label>
      <input type="text" class="form-control" id="inputNome" name="nome" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
      <label for="inputDesc">Descrição:</label>
      <textarea class="form-control" id="inputDesc" name="descricao" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Salvar Produto</button>
  </form>
</div>