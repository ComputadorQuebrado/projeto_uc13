<style>
  .card:hover {
    transform: scale(1.03);
    transition: transform 0.3s ease;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    cursor: pointer;
  }
</style>

<h1>Produtos do E-Commerce PC</h1>

<div class="container">
  <a href="/produtos/add" class="btn btn-primary m-3" role="button"><i class="bi bi-plus-square-fill"></i> Adicionar Produto</a>
  <a href="/categorias/add" class="btn btn-primary m-3" role="button"><i class="bi bi-plus-square-fill"></i> Adicionar Categoria</a>
  {{#if produtos.length}}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {{#each produtos}}
            <div class="col">
                <div class="card h-100 bg-light border-primary">
                    <a href="/produtos/{{this.id}}/detalhes">    
                        <div class="card-body">
                            <h5 class="card-title text-primary">{{this.nome}}</h5>
                            {{!<h6 class="card-subtitle mb-2 text-muted">R$ this.preco</h6>}}
                            {{!<p class="card-text">this.descricao</p>}}
                        </div>
                    </a>
                </div>
            </div>
        {{/each}}
    </div>
  {{else}}
    <div class="alert alert-warning text-center" role="alert">
      Sem produtos disponíveis no momento.
    </div>
  {{/if}}
</div>

