<h1 class="text-center my-4">
  {{#if produto}}Editar Produto{{else}}Adicionar Produto{{/if}}
</h1>

<div class="container" style="max-width: 80%">
  <form action="{{formAction}}" method="POST" class="mb-3 mx-auto">
    
    <div class="form-group">
      <label for="inputNome">Nome:</label>
      <input type="text" class="form-control" id="inputNome" name="nome" value="{{produto.nome}}" required>
    </div>
    
    <div class="form-group">
      <label for="inputDesc">Descrição:</label>
      <textarea class="form-control" id="inputDesc" name="descricao" rows="3">{{produto.descricao}}</textarea>
    </div>
    
    <div class="form-group">
      <label for="inputPreco">Preço:</label>
      <input type="number" step="0.10" class="form-control" id="inputPreco" name="preco" value="{{produto.preco}}" required>
    </div>
    
    <div class="form-group">
      <label for="inputEstoque">Estoque:</label>
      <input type="number" class="form-control" id="inputEstoque" name="estoque" value="{{produto.estoque}}" required>
    </div>
    
    <div class="form-group">
      <label for="inputCategoria">Categoria:</label>
      <select class="form-control" id="inputCategoria" name="categoria_id" required>
        {{#if categorias.length}}
          <option value="">Selecione uma categoria.</option>
          {{#each categorias}}
            <option value="{{this.id}}" {{#ifCond this.id '==' ../produto.categoria_id}}selected{{/ifCond}}>
              {{this.nome}}
            </option>
          {{/each}}
        {{else}}
          <option value="">Sem categorias disponíveis.</option>
        {{/if}}
      </select>
    </div>
    
    <button type="submit" class="btn btn-primary mt-3">
      {{#if produto}}Salvar Alterações{{else}}Salvar Produto{{/if}}
    </button>
  </form>
</div>

